<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/saisieCouleurFond"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="couleur de fond"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnValiderFond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VALIDER" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/saisieCouleurTexte"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="couleur du texte"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnValiderTexte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VALIDER" />
    </LinearLayout>

    <TextView
        android:id="@+id/zoneTexte"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:background="#D3D3D3"
        android:gravity="center"
        android:text="Texte Ã  modifier"
        android:textColor="#000000"
        android:textSize="18sp" />
</LinearLayout>
